{
    "name"              : "jbzoo/toolbox-ci",
    "type"              : "library",
    "description"       : "Toolbox for continuous integration system",
    "license"           : "MIT",

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"           : {
        "php"             : "^7.2",
        "ext-dom"         : "*",
        "jbzoo/data"      : "^4.0.1",
        "jbzoo/utils"     : "^4.1.2",
        "symfony/console" : "^4.4||^5.0"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "^2.3.2"
    },

    "autoload"          : {
        "psr-4" : {
            "JBZoo\\ToolboxCI\\" : "src"
        }
    },

    "autoload-dev"      : {
        "classmap" : ["tests"]
    },

    "bin"               : ["toolbox-ci"],
    "minimum-stability" : "dev",
    "prefer-stable"     : true,
    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    }
}
